Algoritmo "creuza01"

// Descrição: Calcula a idade.

Var
        ano_atual,ano_nasc,idade:inteiro

Inicio 
        EscrevaL("Em que ano nós estamos?")
        Leia (ano_atual)
        EscrevaL ("Em que ano eu nasci?")
        Leia (ano_nasc)
        idade<- ano_atual-ano_nasc
        Escreva ("Então eu tenho ", idade, " anos" )

Fimalgoritmo